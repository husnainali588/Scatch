<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scatch Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body class="bg-gray-50 font-sans selection:bg-blue-100 text-xs">

    <nav
        class="sticky top-0 z-40 w-full bg-gray-50/80 backdrop-blur-md border-b border-gray-200 px-4 py-2.5 flex justify-between items-center">
        <h1 class="text-base font-bold tracking-tight text-gray-900 cursor-pointer">
            <span class="text-blue-600">S</span>catch<span class="text-blue-600">.</span>
        </h1>

        <div class="flex items-center gap-5">
            <a href="/shop" class="text-gray-500 hover:text-gray-900 transition-colors font-medium text-[11px]">Home</a>
            <a href="/cart" class="text-gray-900 font-medium text-[11px] flex items-center gap-1">
                Cart
                <!-- Check if user exists and has items -->
                <% if(user && user.cart.length> 0){ %>
                    <span
                        class="bg-blue-100 text-blue-600 px-1 py-0.5 rounded-full text-[9px] font-bold min-w-[16px] text-center">
                        <%= user.cart.length %>
                    </span>
                    <% } %>
            </a>
            <a href="/users/logout"
                class="bg-red-50 hover:bg-red-100 text-red-600 border border-red-200 px-2.5 py-1 rounded-md transition-all text-[9px] font-semibold uppercase tracking-wider">
                Logout
            </a>
        </div>
    </nav>

    <div class="max-w-screen-lg mx-auto px-4 py-8">

        <h2 class="text-lg font-bold text-gray-900 mb-5 tracking-tight">Shopping Cart</h2>

        <div class="flex flex-col lg:flex-row gap-8">

            <!-- LEFT SIDE: CART ITEMS -->
            <div class="flex-1 space-y-3">

                <% if(user.cart.length> 0) { %>

                    <!-- 1. Change variable name to 'item' to avoid confusion -->
                    <% user.cart.forEach( (item)=> { %>

                        <!-- 2. Add Safety Check: Ensure the product inside the item isn't null -->
                        <% if(item.product) { %>

                            <div class="flex items-start gap-4 ...">

                                <!-- 3. Access details using 'item.product' -->
                                <div class="w-20 h-20 rounded-md overflow-hidden ... "
                                    style="background-color: <%= item.product.bgcolor %>;">

                                    <img class="w-full h-full object-cover mix-blend-multiply"
                                        src="data:image/jpeg;base64, <%= item.product.image.toString('base64') %>">
                                </div>

                                <div class="flex-1">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <!-- item.product.name -->
                                            <h3 class="font-semibold text-gray-900 text-sm">
                                                <%= item.product.name %>
                                            </h3>
                                            <p class="text-gray-400 text-[10px] mt-0.5">Size: M | Color: Red</p>
                                        </div>

                                        <!-- item.product.price -->
                                        <h4 class="font-bold text-gray-900 text-sm">$ <%= item.product.price %>
                                        </h4>
                                    </div>

                                    <div class="flex items-center gap-4 mt-4">
                                        <div class="flex items-center border border-gray-200 rounded overflow-hidden">
                                            <!-- Use item.product._id for links -->
                                            <a href="/cart/remove/<%= item.product._id %>"
                                                class="px-2 py-0.5 text-gray-500 hover:bg-gray-50">-</a>

                                            <!-- item.quantity -->
                                            <span
                                                class="px-2 py-0.5 text-[10px] font-medium text-gray-700 border-x border-gray-200">
                                                <%= item.quantity %>
                                            </span>

                                            <a href="/addtocart/<%= item.product._id %>"
                                                class="px-2 py-0.5 text-gray-500 hover:bg-gray-50">+</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                                <% }) %>
                                    <% } else { %>
                                        <!-- Empty State -->
                                        <p>Cart Empty</p>
                                        <% } %>

            </div>

            <!-- RIGHT SIDE: ORDER SUMMARY -->
            <% if(user.cart.length> 0) { %>
                <div class="w-full lg:w-80 h-fit sticky top-20">
                    <div class="bg-white p-5 rounded-lg border border-gray-100 shadow-sm">
                        <h3 class="font-bold text-gray-900 text-sm mb-4">Order Summary</h3>

                        <!-- ðŸŸ¢ FIX 2: Calculate totals safely (skip null products) -->
                        <% let subtotal=0; user.cart.forEach(item=> {
                            if(item.product) {
                            subtotal += Number(item.product.price) * Number(item.quantity);
                            }
                            });
                            let platformFee = 20;
                            let total = subtotal + platformFee;
                            %>

                            <div class="space-y-3 border-b border-gray-100 pb-4 mb-4">
                                <div class="flex justify-between items-center text-[11px]">
                                    <span class="text-gray-500">Subtotal</span>
                                    <span class="font-medium text-gray-900">$ <%= subtotal %></span>
                                </div>
                                <div class="flex justify-between items-center text-[11px]">
                                    <span class="text-gray-500">Platform Fee</span>
                                    <span class="font-medium text-gray-900">$ <%= platformFee %></span>
                                </div>
                                <div class="flex justify-between items-center text-[11px]">
                                    <span class="text-gray-500">Shipping</span>
                                    <span class="text-green-600 font-medium">Free</span>
                                </div>
                            </div>

                            <div class="flex justify-between items-center mb-6">
                                <span class="font-bold text-gray-900 text-sm">Total Amount</span>
                                <span class="font-bold text-blue-600 text-lg">$ <%= total %></span>
                            </div>

                            <button
                                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 rounded-md transition-colors shadow-sm shadow-blue-200 text-xs tracking-wide">
                                Proceed to Checkout
                            </button>

                            <p class="text-[9px] text-gray-400 text-center mt-3">
                                Secure Checkout - 100% Protected
                            </p>
                    </div>
                </div>
                <% } %>

        </div>

    </div>

</body>

</html>