<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scatch Shop</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body class="bg-gray-50 font-sans selection:bg-blue-100 text-sm text-gray-700">

    <% if(typeof error !=='undefined' && error && error.length> 0){ %>
        <div class="dismiss-alert fixed top-6 right-6 z-[100] transition-opacity duration-500">
            <div class="flex items-center gap-3 px-5 py-3 bg-white border border-red-200 rounded-full shadow-md">
                <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-red-600 font-medium text-sm tracking-wide">
                    <%= Array.isArray(error) ? error.join(', ') : error %>
                </span>
            </div>
        </div>
    <% } %>

    <% if(typeof success !== ' undefined' && success && success.length> 0){ %>
                        <div class="dismiss-alert fixed top-6 right-6 z-[100] transition-opacity duration-500">
                            <div
                                class="flex items-center gap-3 px-5 py-3 bg-white border border-green-200 rounded-full shadow-md">
                                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span class="text-green-600 font-medium text-sm tracking-wide">
                                    <%= Array.isArray(success) ? success.join(', ') : success %>
                </span>
            </div>
        </div>
    <% } %>

    <nav class="sticky top-0 z-40 w-full bg-gray-50/80 backdrop-blur-md border-b border-gray-200 px-8 py-5 flex justify-between items-center transition-all duration-300">
        <h1 class="text-2xl font-bold tracking-tight text-gray-900 cursor-pointer">
            <span class="text-blue-600">S</span>catch<span class="text-blue-600">.</span>
        </h1>

        <div class="flex items-center gap-8">
            <a href="/shop" class="text-gray-900 font-medium text-base transition-colors">Home</a>
            <a href="/cart" class="text-gray-900 font-medium text-base flex items-center gap-2">
                Cart 
                <% if(user && user.cart.length > 0){ %>
                    <span class="bg-blue-100 text-blue-600 px-2.5 py-0.5 rounded-full text-xs font-bold min-w-[24px] text-center">
                        <%= user.cart.reduce((total, item) => total + Number(item.quantity), 0) %> 
                    </span>
                <% } %>
            </a>
            
            <a href="/users/logout" class="bg-red-50 hover:bg-red-100 text-red-600 border border-red-200 px-5 py-2.5 rounded-lg transition-all text-sm font-semibold uppercase tracking-wider">
                Logout
            </a>
        </div>
    </nav>

    <div class="flex h-[calc(100vh-88px)] overflow-hidden">

    
        <aside class="w-80 hidden md:flex flex-col border-r border-gray-200 bg-white px-8 py-8 overflow-y-auto scrollbar-thin">
            <div class="mb-5">
                <h2 class="text-lg font-bold text-gray-900 mb-1">Filters</h2>
            </div>

            <form action="/shop/filter" method="GET" class="space-y-6">
    
                <div class="pb-6 border-b border-gray-200">
                    <h3 class="font-semibold text-gray-900 mb-4 text-sm flex items-center gap-2">
                        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Price Range
                    </h3>
                    
                    <div class="space-y-3">
                        <div class="flex items-center gap-3">
                            <div class="relative flex-1">
                                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 text-xs font-medium">Rs</span>
                                <input type="number" name="min" placeholder="Min" 
                                    value="<%= typeof filters !== 'undefined' ? filters.min : '' %>"
                                    class="w-full bg-gray-50 border border-gray-300 rounded-lg text-sm pl-9 pr-3 py-2.5 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 outline-none transition-all placeholder:text-gray-400">
                            </div>
                            
                            <div class="w-3 h-0.5 bg-gray-300 rounded"></div>
                            
                            <div class="relative flex-1">
                                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 text-xs font-medium">Rs</span>
                                <input type="number" name="max" placeholder="Max"
                                    value="<%= typeof filters !== 'undefined' ? filters.max : '' %>"
                                    class="w-full bg-gray-50 border border-gray-300 rounded-lg text-sm pl-9 pr-3 py-2.5 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 outline-none transition-all placeholder:text-gray-400">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="pb-6 border-b border-gray-200">
                    <h3 class="font-semibold text-gray-900 mb-4 text-sm flex items-center gap-2">
                        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"></path>
                        </svg>
                        Sort By Price
                    </h3>
                    
                    <div class="space-y-2">
                        <label class="flex items-center gap-3 p-3 rounded-lg border border-gray-200 cursor-pointer hover:bg-gray-50 transition-colors group">
                            <input type="radio" name="sort" value="low-to-high" 
                                <%= typeof filters !== 'undefined' && filters.sort === 'low-to-high' ? 'checked' : '' %>
                                class="w-4 h-4 text-blue-600 border-gray-300 focus:ring-blue-500 focus:ring-2">
                            <div class="flex items-center gap-2 flex-1">
                                <svg class="w-4 h-4 text-gray-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
                                </svg>
                                <span class="text-sm text-gray-700 font-medium">Low to High</span>
                            </div>
                        </label>
                        
                        <label class="flex items-center gap-3 p-3 rounded-lg border border-gray-200 cursor-pointer hover:bg-gray-50 transition-colors group">
                            <input type="radio" name="sort" value="high-to-low"
                                <%= typeof filters !== 'undefined' && filters.sort === 'high-to-low' ? 'checked' : '' %>
                                class="w-4 h-4 text-blue-600 border-gray-300 focus:ring-blue-500 focus:ring-2">
                            <div class="flex items-center gap-2 flex-1">
                                <svg class="w-4 h-4 text-gray-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6"></path>
                                </svg>
                                <span class="text-sm text-gray-700 font-medium">High to Low</span>
                            </div>
                        </label>
                    </div>
                </div>

                <div class="space-y-2 pt-2">
                    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg text-sm transition-all shadow-sm hover:shadow-md flex items-center justify-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                        </svg>
                        Apply Filters
                    </button>
                    
                    <a href="/shop" class="block w-full text-center py-2.5 text-sm text-gray-600 hover:text-gray-900 font-medium hover:bg-gray-100 rounded-lg transition-colors">
                        Clear All Filters
                    </a>
                </div>

            </form>
        </aside>
        <div class="flex-1 overflow-y-auto bg-gray-50 px-8 py-10">
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-6 gap-y-10">
                
                <% if(typeof products !== ' undefined' && products.length> 0){ %>
                                        <% products.forEach(function(product){ %>
                                            <div class="group relative cursor-pointer">
                                                <div
                                                    class="w-full aspect-[3/4] rounded-lg overflow-hidden relative mb-3 shadow-sm group-hover:shadow-md transition-all duration-300">
                                                    <img class="w-full h-full object-cover mix-blend-multiply opacity-90 group-hover:opacity-100 group-hover:scale-105 transition-transform duration-500"
                                                        src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                                        alt="<%= product.name %>">

                                                    <a href="/addtocart/<%= product._id %>"
                                                        class="absolute bottom-3 right-3 w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-md translate-y-12 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300 ease-out hover:bg-blue-600 hover:text-white">
                                                        <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                            viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2" d="M12 4v16m8-8H4"></path>
                                                        </svg>
                                                    </a>
                                                </div>

                                                <div class="flex justify-between items-start px-1">
                                                    <div class="max-w-[80%]">
                                                        <h3
                                                            class="font-semibold text-base truncate pr-2 group-hover:text-blue-600 transition-colors">
                                                            <%= product.name %>
                                                        </h3>
                                                        <p class="mt-1 font-bold text-sm">Rs <%= product.price %>
                                                        </p>
                                                    </div>
                                                    <div
                                                        class="flex gap-1 pt-1 opacity-50 group-hover:opacity-100 transition-opacity">
                                                        <button
                                                            class="w-6 h-6 rounded-full bg-blue-50 text-blue-600 flex items-center justify-center hover:bg-blue-600 hover:text-white transition-colors">
                                                            <svg class="w-3 h-3" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2" d="M12 4v16m8-8H4"></path>
                                                            </svg>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                                <% } else { %>
                                                    <div
                                                        class="col-span-full h-64 flex flex-col items-center justify-center text-gray-400">
                                                        <span class="text-5xl mb-4 opacity-30 grayscale">ðŸ“¦</span>
                                                        <p class="font-medium text-lg">No products found.</p>
                                                    </div>
                                                    <% } %>

                            </div>
                        </div>
            </div>

            <script>
                const alerts = document.querySelectorAll('.dismiss-alert');

                alerts.forEach(alert => {
                    setTimeout(() => {
                        alert.style.transition = 'opacity 0.5s ease';
                        alert.style.opacity = '0';
                        setTimeout(() => alert.remove(), 500);
                    }, 2000);
                });
            </script>

</body>

</html>