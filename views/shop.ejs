<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scatch Shop</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>

<body class="bg-gray-50 font-sans selection:bg-blue-100 text-sm text-gray-700">

    <!-- 1. DYNAMIC ERROR MESSAGE (Red) -->
    <% if(typeof error !== 'undefined' && error && error.length > 0){ %>
        <div class="dismiss-alert fixed top-6 right-6 z-[100] transition-opacity duration-500">
            <div class="flex items-center gap-3 px-5 py-3 bg-white border border-red-200 rounded-full shadow-md">
                <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                <span class="text-red-600 font-medium text-sm tracking-wide">
                    <%= Array.isArray(error) ? error.join(', ') : error %>
                </span>
            </div>
        </div>
    <% } %>

    <!-- 2. DYNAMIC SUCCESS MESSAGE (Green) -->
    <% if(typeof success !== 'undefined' && success && success.length > 0){ %>
        <div class="dismiss-alert fixed top-6 right-6 z-[100] transition-opacity duration-500">
            <div class="flex items-center gap-3 px-5 py-3 bg-white border border-green-200 rounded-full shadow-md">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                <span class="text-green-600 font-medium text-sm tracking-wide">
                    <%= Array.isArray(success) ? success.join(', ') : success %>
                </span>
            </div>
        </div>
    <% } %>

    <!-- NAVIGATION (Scaled) -->
    <nav class="sticky top-0 z-40 w-full bg-gray-50/80 backdrop-blur-md border-b border-gray-200 px-8 py-5 flex justify-between items-center transition-all duration-300">
        <h1 class="text-2xl font-bold tracking-tight text-gray-900 cursor-pointer">
            <span class="text-blue-600">S</span>catch<span class="text-blue-600">.</span>
        </h1>

        <div class="flex items-center gap-8">
            <a href="/shop" class="text-gray-900 font-medium text-base transition-colors">Home</a>
            <a href="/cart" class="text-gray-900 font-medium text-base flex items-center gap-2">
                Cart 
                <% if(user && user.cart.length > 0){ %>
                    <span class="bg-blue-100 text-blue-600 px-2.5 py-0.5 rounded-full text-xs font-bold min-w-[24px] text-center">
                        <%= user.cart.reduce((total, item) => total + Number(item.quantity), 0) %> 
                    </span>
                <% } %>
            </a>
            
            <a href="/users/logout" class="bg-red-50 hover:bg-red-100 text-red-600 border border-red-200 px-5 py-2.5 rounded-lg transition-all text-sm font-semibold uppercase tracking-wider">
                Logout
            </a>
        </div>
    </nav>

    <!-- MAIN LAYOUT -->
    <div class="flex h-[calc(100vh-88px)] overflow-hidden">

        <!-- SIDEBAR (Scaled: w-64, text-sm) -->
        <aside class="w-64 hidden md:flex flex-col border-r border-gray-200 bg-white px-6 py-8 overflow-y-auto scrollbar-thin">
            <div class="mb-8">
                <h3 class="font-bold text-gray-900 mb-4 tracking-wide uppercase text-xs text-opacity-70">Sort By</h3>
                <ul class="space-y-3 text-gray-500 text-sm">
                    <li><a href="#" class="block hover:text-blue-600 transition-colors">Newest Items</a></li>
                    <li><a href="#" class="block hover:text-blue-600 transition-colors">Popular</a></li>
                    <li><a href="#" class="block hover:text-blue-600 transition-colors">Low to High</a></li>
                    <li><a href="#" class="block hover:text-blue-600 transition-colors">High to Low</a></li>
                </ul>
            </div>
            <div class="mb-8">
                <h3 class="font-bold text-gray-900 mb-4 tracking-wide uppercase text-xs text-opacity-70">Categories</h3>
                <div class="space-y-3 text-sm">
                    <label class="flex items-center gap-3 cursor-pointer group">
                        <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-0 w-4 h-4">
                        <span class="text-gray-500 group-hover:text-blue-600 transition-colors">Men</span>
                    </label>
                    <label class="flex items-center gap-3 cursor-pointer group">
                        <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-0 w-4 h-4">
                        <span class="text-gray-500 group-hover:text-blue-600 transition-colors">Women</span>
                    </label>
                </div>
            </div>
        </aside>

        <!-- PRODUCT GRID AREA (Scaled) -->
        <div class="flex-1 overflow-y-auto bg-gray-50 px-8 py-10">
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-6 gap-y-10">
                
                <% if(typeof products !== 'undefined' && products.length > 0){ %>
                    <% products.forEach(function(product){ %>
                        <div class="group relative cursor-pointer">
                            <!-- Image Container -->
                            <div class="w-full aspect-[3/4] rounded-lg overflow-hidden relative mb-3 shadow-sm group-hover:shadow-md transition-all duration-300"
                                
                            >
                                <img class="w-full h-full object-cover mix-blend-multiply opacity-90 group-hover:opacity-100 group-hover:scale-105 transition-transform duration-500" 
                                     src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                                     alt="<%= product.name %>">
                                
                                <a href="/addtocart/<%= product._id %>" class="absolute bottom-3 right-3 w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-md translate-y-12 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300 ease-out hover:bg-blue-600 hover:text-white">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                                </a>
                            </div>

                            <!-- Info (Scaled Fonts) -->
                            <div class="flex justify-between items-start px-1" 
                                 >
                                <div class="max-w-[80%]">
                                    <h3 class="font-semibold text-base truncate pr-2 group-hover:text-blue-600 transition-colors">
                                        <%= product.name %>
                                    </h3>
                                    <p class="mt-1 font-bold text-sm">Rs <%= product.price %></p>
                                </div>
                                <div class="flex gap-1 pt-1 opacity-50 group-hover:opacity-100 transition-opacity">
                                    <button class="w-6 h-6 rounded-full bg-blue-50 text-blue-600 flex items-center justify-center hover:bg-blue-600 hover:text-white transition-colors">
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-span-full h-64 flex flex-col items-center justify-center text-gray-400">
                        <span class="text-5xl mb-4 opacity-30 grayscale">ðŸ“¦</span>
                        <p class="font-medium text-lg">No products found.</p>
                    </div>
                <% } %>

            </div>
        </div>
    </div>

    <!-- SCRIPT -->
    <script>
        const alerts = document.querySelectorAll('.dismiss-alert');
        
        alerts.forEach(alert => {
            setTimeout(() => {
                alert.style.transition = 'opacity 0.5s ease';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500); 
            }, 2000); 
        });
    </script>

</body>
</html>