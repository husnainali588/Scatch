<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scatch Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        brand: {
                            blue: '#3b82f6',
                            dark: '#1f2937',
                        }
                    },
                    animation: {
                        'fade-in-up': 'fadeInUp 0.6s ease-out forwards',
                        'shine': 'shine 1s ease-in-out',
                        'auto-bounce': 'autoBounce 3s infinite',
                    },
                    keyframes: {
                        fadeInUp: {
                            '0%': { opacity: '0', transform: 'translateY(15px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        },
                        shine: {
                            '0%': { left: '-100%' },
                            '100%': { left: '100%' }
                        },
                        autoBounce: {
                            '0%, 100%': { transform: 'translateY(0)' },
                            '5%': { transform: 'translateY(-10px)' },
                            '10%': { transform: 'translateY(0)' },
                        }
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .scatch-wrapper { display: inline-flex; cursor: pointer; position: relative; }
        .letter-span { display: inline-block; transition: color 0.2s ease; transform-origin: bottom center; }
        .scatch-wrapper:hover .letter-span { animation: letter-wave 0.8s cubic-bezier(0.35, 0, 0.25, 1); }
        .ball-span { display: inline-block; color: #3b82f6; }
        .scatch-wrapper:not(:hover) .ball-span { animation: autoBounce 3s ease-in-out infinite; animation-delay: 1s; }
        .scatch-wrapper:hover .ball-span { animation: letter-wave 0.8s cubic-bezier(0.35, 0, 0.25, 1); animation-delay: 350ms; color: #ec4899; }
        
        /* Staggered delays */
        .scatch-wrapper:hover .letter-span:nth-child(1) { animation-delay: 0ms; }
        .scatch-wrapper:hover .letter-span:nth-child(2) { animation-delay: 50ms; }
        .scatch-wrapper:hover .letter-span:nth-child(3) { animation-delay: 100ms; }
        .scatch-wrapper:hover .letter-span:nth-child(4) { animation-delay: 150ms; }
        .scatch-wrapper:hover .letter-span:nth-child(5) { animation-delay: 200ms; }
        .scatch-wrapper:hover .letter-span:nth-child(6) { animation-delay: 250ms; }

        @keyframes letter-wave {
            0%, 100% { transform: translateY(0) scale(1); }
            30% { transform: translateY(-12px) scale(1.1); color: #2563eb; text-shadow: 0 5px 15px rgba(37, 99, 235, 0.2); }
            60% { transform: translateY(2px) scale(0.95); }
        }
    </style>
</head>

<body class="bg-gray-50 h-screen w-screen overflow-hidden flex flex-col relative text-sm text-gray-700">

    <!-- DYNAMIC ALERTS (Scaled) -->
    <% if(typeof error !== 'undefined' && error && error.length > 0){ %>
        <div class="dismiss-alert fixed top-6 right-6 z-[100]">
            <div class="flex items-center gap-3 px-5 py-3 bg-white border border-red-200 rounded-full shadow-md">
                <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                <span class="text-red-600 font-medium text-sm tracking-wide">
                    <%= Array.isArray(error) ? error.join(', ') : error %>
                </span>
            </div>
        </div>
    <% } %>

    <% if(typeof success !== 'undefined' && success && success.length > 0){ %>
        <div class="dismiss-alert fixed top-6 right-6 z-[100]">
            <div class="flex items-center gap-3 px-5 py-3 bg-white border border-green-200 rounded-full shadow-md">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                <span class="text-green-600 font-medium text-sm tracking-wide">
                    <%= Array.isArray(success) ? success.join(', ') : success %>
                </span>
            </div>
        </div>
    <% } %>

    <!-- Canvas for Dynamic Dots Effect -->
    <canvas id="dots-canvas" class="absolute inset-0 w-full h-full pointer-events-none z-50"></canvas>

    <!-- Main Content -->
    <main class="flex-grow flex items-center justify-center px-8 md:px-16 relative z-10 overflow-y-auto">

        <div class="w-full max-w-5xl grid grid-cols-1 md:grid-cols-2 gap-16 items-start">

            <!-- Left Side: Create Account -->
            <div class="space-y-6 opacity-0 animate-fade-in-up animation-delay-100">
                <div>
                    <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-2 tracking-tight leading-tight select-none">
                        welcome to
                        <span class="scatch-wrapper ml-2 text-blue-500">
                            <span class="letter-span">S</span><span class="letter-span">c</span><span class="letter-span">a</span><span class="letter-span">t</span><span class="letter-span">c</span><span class="letter-span">h</span><span class="letter-span ball-span text-blue-500">.</span>
                        </span>
                    </h1>
                    <p class="text-base text-gray-600">create your account</p>
                </div>

                <form action="/users/register" method="post" class="space-y-5 mt-4">
                    <div class="group relative">
                        <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-300 to-purple-300 rounded-lg opacity-0 group-hover:opacity-30 group-focus-within:opacity-50 transition duration-500 blur-sm"></div>
                        <input type="text" placeholder="Full Name" name="fullname"
                            class="relative w-full bg-gray-100 border border-transparent rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 text-sm focus:bg-white focus:border-transparent focus:ring-0 focus:outline-none transition-all duration-300 ease-out shadow-sm group-hover:bg-white group-hover:shadow-md">
                    </div>
                    <div class="group relative">
                        <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-300 to-purple-300 rounded-lg opacity-0 group-hover:opacity-30 group-focus-within:opacity-50 transition duration-500 blur-sm"></div>
                        <input type="email" placeholder="Email" name="email"
                            class="relative w-full bg-gray-100 border border-transparent rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 text-sm focus:bg-white focus:border-transparent focus:ring-0 focus:outline-none transition-all duration-300 ease-out shadow-sm group-hover:bg-white group-hover:shadow-md">
                    </div>
                    <div class="group relative">
                        <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-300 to-purple-300 rounded-lg opacity-0 group-hover:opacity-30 group-focus-within:opacity-50 transition duration-500 blur-sm"></div>
                        <input type="password" placeholder="Password" name="password"
                            class="relative w-full bg-gray-100 border border-transparent rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 text-sm focus:bg-white focus:border-transparent focus:ring-0 focus:outline-none transition-all duration-300 ease-out shadow-sm group-hover:bg-white group-hover:shadow-md">
                    </div>

                    <div class="pt-2">
                        <button type="submit"
                            class="relative bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold py-3 px-8 rounded-full shadow-md shadow-blue-500/30 hover:shadow-blue-500/50 hover:-translate-y-0.5 active:translate-y-0 active:scale-95 transition-all duration-300 ease-out w-full md:w-auto overflow-hidden group">
                            <span class="relative z-10">Create My Account</span>
                            <div class="absolute top-0 -left-full w-1/2 h-full bg-white/20 skew-x-12 group-hover:animate-[shine_1s_ease-in-out]"></div>
                        </button>
                    </div>
                </form>
            </div>

            <!-- Right Side: Login -->
            <div class="space-y-6 mt-8 md:mt-12 opacity-0 animate-fade-in-up animation-delay-300">
                <div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">Login Your Account</h2>
                    <p class="text-gray-500 text-sm">Welcome back, please enter your details.</p>
                </div>

                <form class="space-y-5" action="/users/login" method="post">
                    <div class="group relative">
                        <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-300 to-purple-300 rounded-lg opacity-0 group-hover:opacity-30 group-focus-within:opacity-50 transition duration-500 blur-sm"></div>
                        <input type="email" placeholder="Email" name="email"
                            class="relative w-full bg-gray-100 border border-transparent rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 text-sm focus:bg-white focus:border-transparent focus:ring-0 focus:outline-none transition-all duration-300 ease-out shadow-sm group-hover:bg-white group-hover:shadow-md">
                    </div>
                    <div class="group relative">
                        <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-300 to-purple-300 rounded-lg opacity-0 group-hover:opacity-30 group-focus-within:opacity-50 transition duration-500 blur-sm"></div>
                        <input type="password" placeholder="Password" name="password"
                            class="relative w-full bg-gray-100 border border-transparent rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 text-sm focus:bg-white focus:border-transparent focus:ring-0 focus:outline-none transition-all duration-300 ease-out shadow-sm group-hover:bg-white group-hover:shadow-md">
                    </div>

                    <div class="pt-2">
                        <button type="submit"
                            class="relative bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold py-3 px-10 rounded-full shadow-md shadow-blue-500/30 hover:shadow-blue-500/50 hover:-translate-y-0.5 active:translate-y-0 active:scale-95 transition-all duration-300 ease-out w-full md:w-auto overflow-hidden group">
                            <span class="relative z-10">Login</span>
                            <div class="absolute top-0 -left-full w-1/2 h-full bg-white/20 skew-x-12 group-hover:animate-[shine_1s_ease-in-out]"></div>
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </main>

    <!-- Auto-hide script -->
    <script>
        const alerts = document.querySelectorAll('.dismiss-alert');
        alerts.forEach(alert => {
            setTimeout(() => {
                alert.style.transition = 'opacity 0.5s ease';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            }, 3000); 
        });
    </script>

</body>
</html>